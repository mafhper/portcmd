{
  "name": "portcommand",
  "version": "1.0.0",
  "description": "A premium, system-tray ready port and process manager for developers.",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev.cjs",
    "dev:clean": "rimraf node_modules/.vite && node scripts/dev.cjs",
    "dev:client": "vite",
    "dev:server": "npm run dev --prefix server",
    "dev:website": "vite serve website --config vite.website.config.ts",
    "dev:dashboard": "node packages/quality-core/dashboard/server.cjs",
    "build": "npm run build:website && tsc && vite build",
    "build:clean": "rimraf node_modules/.vite && tsc && vite build",
    "build:website": "vite build --config vite.website.config.ts",
    "deploy": "npm run build:website && npm run build",
    "preview": "vite preview",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write .",
    "// --- HEALTH & AUTOMATION ---": "",
    "health": "node scripts/health.js",
    "// --- AUDIT ---": "",
    "audit": "node scripts/audit-runner.js",
    "audit:app": "node scripts/audit-runner.js --filter=app",
    "audit:promo": "node scripts/audit-runner.js --filter=promo",
    "audit:links": "node scripts/audit/links.js",
    "audit:summary": "node scripts/audit/generate-summary.js",
    "// --- QUALITY CORE ---": "",
    "quality": "node quality-core/cli/quality.cjs",
    "quality:quick": "node quality-core/cli/quality.cjs --quick",
    "quality:gate": "node packages/quality-core/cli/run.cjs",
    "quality:startup": "node packages/quality-core/src/validators/startup.cjs",
    "perf:lighthouse": "node packages/quality-core/cli/run-lighthouse.cjs",
    "dashboard": "node packages/quality-core/dashboard/server.cjs",
    "// --- TEST & QA ---": "",
    "test:structure": "node scripts/test/structure.js",
    "test:i18n": "node scripts/test/i18n.js",
    "test:perf": "node scripts/test/perf.js",
    "// --- OPS ---": "",
    "ops:optimize": "node scripts/ops/optimize-images.js",
    "ops:changelog": "node scripts/ops/fetch-changelog.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.26",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-resources-to-backend": "^1.2.1",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.0",
    "zod": "^4.2.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@types/node": "^20.11.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "chalk": "^5.3.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "lighthouse": "^13.0.1",
    "marked": "^17.0.1",
    "playwright": "^1.57.0",
    "postcss": "^8.4.27",
    "prettier": "^3.2.4",
    "puppeteer": "^24.33.0",
    "rimraf": "^6.1.2",
    "sharp": "^0.33.2",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^7.3.0",
    "yargs": "^17.7.2"
  }
}